generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}





model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  phone     String?
  tier      String   @default("Tier 1")
  verificationStatus String @default("pending")
  role      String   @default("USER")
  kycStatus String @default("NOT_STARTED")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  capabilities UserCapability[]
  verification IdentityVerification?
  // Investments would go here
}

model Capability {
  id              String   @id @default(uuid())
  name            String   @unique // e.g., 'view_marketplace', 'invest', 'admin_dashboard'
  defaultOnSignup Boolean  @default(false)
  
  users           UserCapability[]
}

model UserCapability {
  userId       String
  capabilityId String
  assignedAt   DateTime @default(now())
  
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  capability Capability @relation(fields: [capabilityId], references: [id], onDelete: Cascade)

  @@id([userId, capabilityId])
}

model IdentityVerification {
  id        String    @id @default(uuid())
  userId    String    @unique
  fullName  String
  idType    String
  idNumber  String
  status    String    @default("PENDING")
  submittedAt DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Property {
  id               String   @id @default(uuid())
  title            String
  description      String
  price            Float
  roi              Float
  fundedPercentage Float    @default(0)
  images           String   @default("") // Array of URLs stored as string
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  resource  String?
  details   String?  // JSON string
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
}
